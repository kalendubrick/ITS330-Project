import java.util.Calendar;

public class Time 
{
	
	private int hour;
	private String minute;
	private String second;
	
	public Time()
	{
		Calendar ca = Calendar.getInstance();
		hour = ca.get(Calendar.HOUR_OF_DAY);
		minute = Integer.toString(ca.get(Calendar.MINUTE));
		second = Integer.toString(ca.get(Calendar.SECOND));
	}
	
	public int getHour()
	{
		return hour;
	}
	
	public String getMinute()
	{
		return minute;
	}
	
	public String getSecond()
	{
		return second;
	}
}
