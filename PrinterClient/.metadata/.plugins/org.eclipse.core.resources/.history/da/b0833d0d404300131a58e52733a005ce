import java.util.Random;
import java.io.Serializable;

public class Job implements Serializable{
	
		/**
	 * 
	 */
	private static final long serialVersionUID = 7187252254050323395L;
		private int JobID, OPNumber;	
		private Queue<Operation> OPs;
		private Random randGen;
		private boolean isDone = false;
		
		public Job(){}		
		
		public Job(int a, int b)
		{
			this.JobID = a;
			this.OPNumber =b;
			this.OPs = new Queue<Operation>();
			this.randGen = new Random();
			
			for (int i =0; i<b;i++)
			{
				 int r = randGen.nextInt(3);
				Operation op = new Operation(this.JobID,r,i+1);
				this.OPs.insert(op);
			}
			
		}		
		
		public int getJobID()
		{
			return this.JobID;
		
		}
		
		public void setJobID(int d)
		{
			this.JobID=d;
		}	
		
		public int getOPNumber()
		{
			return this.OPNumber;
		}
		
		public void setOPNumber(int d)
		{
			this.OPNumber=d;
		}
		
		public Queue<Operation> getOPs()
		{
			return this.OPs;
		}
		
		public void setOPs(Queue<Operation> d)
		{
			this.OPs=d;
		}
		
		public synchronized boolean isDone()
		{
			return this.isDone;
		}
		
		public synchronized void setIsDone(boolean d)
		{
			this.isDone=d;
		}
		
		public void print(String msg) 
		{
			String threadName = Thread.currentThread().getName();
			System.out.println(threadName + ": "+msg);			
		}
}


